# Fast benchmark setup - extends existing development image
# Build time: ~30 seconds (only installs pybind11)
FROM mirror_bridge:full

# Only install benchmark dependencies
RUN apt-get update && apt-get install -y \
    pybind11-dev \
    libboost-python-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

# Note: This assumes mirror_bridge:full already has:
# - clang-p2996 with reflection support
# - Python 3.10+
# - All necessary build tools
